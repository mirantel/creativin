.layer_services
	top 66px
	.btn-slide
		top 700px
		left 50%
		margin-left -24px
		position absolute
		z-index 40

.service
	height 0
	width 33.33333333%
	text-align center
	position absolute
	overflow hidden
	color #fff
	z-index 40
	.wrap
		display table
		height 100%
		width 100%
	.inner
		display table-cell
		vertical-align middle
	&_1
		background #163B5E
		left 0
	&_2
		background #214B73
		left 33.33333333%
		width 33.35%
		top 0
	&_3
		background #325D86
		right 0
	&_1,
	&_3
		bottom 0
		.wrap
			position absolute
			bottom 0
	&_bottom
		top auto
		bottom 0
	&__icon
		width 160px
		height 160px
		margin 0 auto 45px
		&:before
			height 130px
			border-radius 0
			top 25%
			left 16%
		&-holder
			border-radius 50%
			background #fff
			box-shadow 0 0 0 8px #275580
	&__title
		color $yellow
		font-size 24px
		font-weight bold
		margin 0 0 24px
		text-transform uppercase
		position relative
		&:after
			width 145px
			height 1px
			background #FFF
			opacity 0.1
			content ""
			display block
			margin 24px auto 0
	&__decription
		font-size 16px
		line-height 1.5
	&__list
		text-align left
		width 122px
		margin 0 auto
		line-height 1.5
		li
			background-image embedurl("../date-img/arr.png")
			background-repeat no-repeat
			padding 0 0 0 22px
			background-position 0 50%