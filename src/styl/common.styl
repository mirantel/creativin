html,body {
	height: 100%;
	font-family: "SegoeUI", "Optima", "Verdana",sans-serif;
}

ul,ol {
	margin: 0;
	padding: 0;
	list-style: none;
}

// Colors

$blue_dark = #08233e;
$yellow = #FABD02;
//274d71
//214b73


// Common styles
.slide {
	height: 100%;
	width: 100%;
	background: $yellow;
	min-height: 600px;
	box-sizing: border-box;
}

.shadow, .with-shadow {
	position: relative;
	text-align: center;
	&::before{
		position: absolute;
		top: 35%;
		left:35%;
		width: 100%;
		height: 100%;
		border-radius: 0 0 0 75%;
		background: linear-gradient(to bottom, rgba(0,0,0,0.25) 0%,rgba(0,0,0,0) 100%);
		content: "";
		transform: rotate(-45deg);
	}
}

.with-shadow__in{
	position: relative;
	display: block;
	height: 100%;
	border-radius: 50%;
}

.lang {
	font-size: 0;
	li {
		display: inline-block;
		margin: 0 5px;
	}

	a {
		display: block;
		height: 30px;
		width: 30px;
		line-height: 30px;
		color: #fff;
		font-size: 11px;
		text-transform: uppercase;
		text-decoration: none;
		background: #2C5379;
		transition: background 0.2s ease-out;
		&:hover, &:active{
			color: #f0b500;
			background: #fff;
		}
	}
}

.btn-slide {
	height: 48px;
	width: 48px;
	margin: 0 auto;

	&__in{
		display: block;
		height: 100%;
		cursor: pointer;
		overflow: hidden;
		transition: background 0.2s ease-out;
	}

	&_blue .btn-slide__in {
		background: #0F2D4C;
		&:hover {
			background: #214b73;
		}
	}

	&_white span{
		background: #fff;
	}

	&_yellow span{
		
	}
}

.icon-arr-bottom{
	width: 37px;
	height: 26px;
	background-image: embedurl("../date-img/icon-arr-bottom.png");
	top: 21px;
	left: 13px;
	position: absolute;
}

.header{
	background: $blue_dark;
	height: 68px;
	_clearfix();

	.inner{
		max-width: 1080px;
		margin: 0 auto;
		height: 100%;
	}
	.lang{
		float: right;
		width: 90px;
		text-align: right;
		border-left: 1px solid;
		color: #06182B;
		box-shadow: 1px 0 0 #0a2e51 inset;
		height: 100%;
		line-height: 68px;
		li{
			vertical-align: middle;
		}
	}
}
.logo{
	float: left;
	background: url(../img/logo.png);
	width: 165px;
	height: 40px;
	color: transparent;
	font: 0/0 a;
	margin: 14px 0 0;
}
.nav{
	text-align: center;
	width: 410px;
	margin: 0 auto;
	padding-top: 7px;
	a{
		display: block;
	}
	a:hover, .is-active{
		.nav__icon{
			background: #FABD02;
		}
		.icon-portfolio{
			background-image: embedurl("../date-img/icon-portfolio_h.png");
		}
		.nav__text{
			z-index: 2;
			opacity: 1;
			bottom: -36px;
		}
	}
	a{
		display: block;
		border-radius: 50%;
	}
}
.nav__item{
	display: inline-block;
	font-size: 0;
	margin: 0 20px;
	border-radius:50%;
	width: 48px;
	height: 48px;
}
.nav__icon{
	width: 48px;
	height: 48px;
	background: #2C5379;
	transition: background 0.5s ease-out;
	z-index: 3;
	i{
		position: absolute;
	}
}
.nav__text{
	position: absolute;
	display: block;
	background: embedurl("../date-img/nav-bottom.png");
	height: 27px;
	width: 120px;
	text-align: center;
	font-style: italic;
	color: #fabd02;
	font-size: 13px;
	left: 50%;
	margin-left: -60px;
	bottom: 0;
	opacity: 0;
	z-index: -1;
	transition: all 0.7s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}
