.layer_contacts
	.title
		font-size 40px
		font-weight 200
		color #fff
		margin: 45px 0 33px;
	.contacts-right .title
		margin-bottom 19px

.contacts-left
	position absolute;
	top 68px
	bottom 0
	left 0
	width 66.4%
	background #fabd02
	&__in
		width 750px
		float right

.contacts-right
	position absolute
	top 68px
	bottom 0
	right 0
	width 33.6%
	background #eba000
	&__in
		width 295px
		float left
		padding 0 0 0 40px

.contacts
	margin-bottom 35px
	&:after
		content ""
		display table
		clear both
	&__block
		float left
		color #fff
		font-size 14px
		box-sizing border-box
		&_1
			width 241px
		&_2
			width 304px
			padding-left 75px
			border-left 1px solid #f8a401
			box-shadow -1px 0 0 #fcd603
		&_3
			width 200px
			padding-left 66px
			border-left 1px solid #f8a401
			box-shadow -1px 0 0 #fcd603
		a
			color #fff
			&:hover
				text-decoration none

	&__title
		font-size 14px
		position relative
		text-transform uppercase
		margin -21px 0 0
		&:after
			position absolute
			width 14px
			height 1px
			content ""
			left 0
			bottom -10px
			background #fcd661
.icon-address,
.icon-mail,
.icon-flag
	display inline-block
	position relative
	margin-left 13px
	height 27px
	background-repeat no-repeat

.icon-address
	background-image embedurl("../date-img/icon-address.png")
	width 21px
	top 12px
.icon-mail
	background-image embedurl("../date-img/icon-mail.png")
	width 24px
	top 9px
.icon-flag
	background-image embedurl("../date-img/icon-flag.png")
	width 19px
	top 13px

.content-text
	font-size 14px
	color #fff
	font-style italic
	border-top 1px solid #e68800
	border-bottom 1px solid #e68800
	box-shadow 0 -1px 0 #f0b800, 0 -1px 0 #f0b800 inset
	
.map
	border 8px solid #fbca35
	display inline-block
	
.contact-form
	padding 23px 0 0
	&__row
		background: linear-gradient(to bottom, #c27040 0%,#f4ab80 100%);
		padding 1px
		margin-bottom 7px
		input,
		textarea
			border 0
			width 100%
			display block
			box-sizing border-box
			padding 0 20px
			color #a59e8e
			font-size 14px
			box-shadow 0 2px 4px rgba(78,45,25,.4) inset
		input
			height 42px
		textarea
			padding 15px 20px
			font-family "SegoeUI", "Optima", "Verdana", sans-serif
			margin 0
			height 138px