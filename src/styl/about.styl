.layer_about-us
 	position static

.about
	position absolute
	overflow hidden
	width 50%
	top 0
	z-index 20
	font-size 16px
	line-height 1.5
	&_hacker
		background #2c5379
		color #fff
		left 0

		.inner
			float right
	&_hipster
		background #fabd02
		color #08233e
		right 0

		.inner
			float left
	&__photo
		margin-bottom 38px
		img
			vertical-align top
	&__title
		text-transform uppercase
		font-size 24px
		font-weight bold
		line-height 1
		padding-bottom 25px
		margin 0 0 23px
		.about_hacker &
			border-bottom 1px solid #1f3a54
			box-shadow 0 -1px 0 #396c9e inset
			span
				color #fabd02
		.about_hipster &
			border-bottom 1px solid #f8a301
			box-shadow 0 -1px 0 #fcd703 inset
			span
				color #fff
	.inner
		padding 128px 38px 0
		width 503px

.about__social
	.about_hacker &
		float left
	.about_hipster &
		float right

.social
	height 35px
	width 35px
	float left
	.with-shadow__in
		transition background 0.2s ease-out
	.about_hacker &
		margin-right 10px
		.with-shadow__in
			background #1a3c5e
			&:hover
				background #fff
	.about_hipster &
		margin-left 10px
		.with-shadow__in
			background #e99f01
			&:hover
				background #fff

	.icon-twitter
		width 25px
		height 22px
		position absolute
		top 11px
		left 9px
		background-image embedurl("../date-img/icon-twitter.png")
		background-repeat no-repeat
	&:hover .icon-twitter
		background-image embedurl("../date-img/icon-twitter_h.png")
	.icon-facebook
		width 21px
		height 23px
		position absolute
		top 10px
		left 14px
		background-image embedurl("../date-img/icon-facebook.png")
		background-repeat no-repeat
	.about_hacker &:hover .icon-facebook
		background-image embedurl("../date-img/icon-facebook_h.png")
	.about_hipster &:hover .icon-facebook
		background-image embedurl("../date-img/icon-facebook_h2.png")
	.icon-be
		width 26px
		height 22px
		position absolute
		top 12px
		left 9px
		background-image embedurl("../date-img/icon-be.png")
		background-repeat no-repeat
	&:hover .icon-be
		background-image embedurl("../date-img/icon-be_h.png")